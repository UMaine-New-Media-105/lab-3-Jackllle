function setup() {
  createCanvas(400, 400);
}

function draw() {
  background(220);
  DrawShape(200, 100, "green");
}
function DrawShape(x, y, ifcolor) {
   translate(x, y);
  strokeWeight(10);
  rect(100, 100, 50, 50);
  triangle(1, 1, 100, 1, 100, 100);
  
  if (mouseX<= 200) {
    fill("green")
  } else{fill("red")}
  if (mouseY >= 200) {
    fill("magenta");
  } else { (ifcolor);
  }
 
  
}
